{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "title": {
      "text": "Innovation and Wealth Inequality",
      "subtitle":"This graph looks at the wealth inequality in countries with differing levels of innovation",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },

     "data": {
      "url": "https://raw.githubusercontent.com/EliezerMeyer/EliezerMeyer.github.io/main/Project_InnovationIndex_WealthInequality_Data.csv",
      "format": {"type": "csv"}
    },


    "height": 300,
    "width": 280,

    "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "GII Score",
          "title": "Global Innovation Index (GII) Score",
          "type": "quantitative"
        },
        "y": {
          "field": "Gini Wealth Index Score",
          "type": "quantitative"
        },
         "color": {
        "field": "Income Score",
        "type": "quantitative",
        "title":["Income Score:","With '1' Showing Low", "Income Countries", "and '4' Showing", "High Income Countries"],
        "scale": { "scheme": "oranges"}},
        "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "GII Score", "type": "quantitative"},
        {"field": "Gini Wealth Index Score", "type": "quantitative"}, {"field": "Income Score", "type": "quantitative"}

      ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "black"
      },
      "transform": [
        {
          "regression": "Gini Wealth Index Score",
          "on": "GII Score"
        }
      ],
      "encoding": {
        "x": {
          "field": "GII Score",
          "type": "quantitative"
        },
        "y": {
          "field": "Gini Wealth Index Score",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "Gini Wealth Index Score",
          "on": "GII Score",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "firebrick",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}

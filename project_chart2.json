{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "title": {
      "text": "Innovation and Wealth Inequality - Adjusted for Income Score",
      "subtitle":["When adjusting for Income Score, there seems to be some correlation between the", "variables for high-income countries"],
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },

     "data": {
      "url": "https://raw.githubusercontent.com/EliezerMeyer/EliezerMeyer.github.io/main/Project_InnovationIndex_WealthInequality_Data.csv",
      "format": {"type": "csv"}
    },


    "height": 300,
    "width": 280,

    "mark": {"type": "point", "filled": false},

    "encoding": {

      "x": {
        "field": "GII Score",
        "type": "quantitative",
        "title": "Global Innovation Index Score",
        "axis": {"grid": false}
      },

      "y": {
        "field": "Gini Wealth Index Score",
        "type": "quantitative",
        "title": "Gini Wealth Index Score",
        "axis": {"grid": false}
      },

      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "GII Score", "type": "quantitative"},
        {"field": "Gini Wealth Index Score", "type": "quantitative"}, {"field": "Income Score", "type": "quantitative"}

      ],

       "facet": {
                "field": "Income Score",
                "columns": 1,
                "title":"Income Score"}


  }
  }

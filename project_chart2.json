{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "title": {
      "text": "Innovation and Wealth Inequality - Separated by Income Score",
      "subtitle":["As this graph shows, even when adjusting for income score", "the relationship is not clear"],
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },

     "data": {
      "url": "https://raw.githubusercontent.com/EliezerMeyer/EliezerMeyer.github.io/main/Project_InnovationIndex_WealthInequality_Data.csv",
      "format": {"type": "csv"}
    },


    "height": 120,
    "width": 130,

    "mark": {"type": "point", "filled": false, "color": "orange"},

    "encoding": {

      "x": {
        "field": "GII Score",
        "type": "quantitative",
        "title": "GII Score",
        "axis": {"grid": false}
      },

      "y": {
        "field": "Gini Wealth Index Score",
        "type": "quantitative",
        "title": "Gini Wealth Index Score",
        "axis": {"grid": false}
      },

      "tooltip": [
        {"field": "Country", "type": "nominal"},
        {"field": "GII Score", "type": "quantitative"},
        {"field": "Gini Wealth Index Score", "type": "quantitative"}, {"field": "Income Score", "type": "quantitative"}

      ],

       "facet": {
                "field": "Income Score",
                "columns": 2,
                "title":"Income Score"}


  }
  }
